{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/main",
    "module": "Node16",
    "target": "ES2020",
    "noEmit": false,
    "isolatedModules": false,
    "allowJs": false,
    "composite": false,
    "sourceMap": true,
    "types": ["node"],
    "skipLibCheck": true,
    "moduleResolution": "Node16",
    "rootDirs": ["src/main", "src/types"],
    "declaration": true,
    "declarationDir": "dist/types/main"
  },
  "include": ["src/main/**/*", "src/types/*"],
  "exclude": ["node_modules", "dist"]
}
