{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DM NOTE",
  "version": "1.3.0",
  "identifier": "com.dmnote.desktop",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3400",
    "frontendDist": "../dist/renderer"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "DM Note - Settings",
        "width": 902,
        "height": 488,
        "resizable": false,
        "maximizable": false,
        "fullscreen": false,
        "center": false,
        "transparent": true,
        "decorations": false,
        "shadow": false,
        "url": "main/index.html",
        "visible": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["main", "dmnote-dev"]
    },
    "withGlobalTauri": true
  }
}
