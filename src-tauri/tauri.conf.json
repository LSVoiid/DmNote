{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DM NOTE",
  "version": "1.5.0",
  "identifier": "com.dmnote.desktop",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3400",
    "frontendDist": "../dist/renderer"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "DM Note - Settings",
        "width": 902,
        "height": 488,
        "resizable": false,
        "maximizable": false,
        "fullscreen": false,
        "center": false,
        "transparent": false,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "trafficLightPosition": {
          "x": 12,
          "y": 18
        },
        "shadow": true,
        "url": "main/index.html",
        "visible": false,
        "backgroundColor": "#1A191E"
      }
    ],
    "security": {
      "csp": null,
      "headers": {
        "Cross-Origin-Opener-Policy": "same-origin",
        "Cross-Origin-Embedder-Policy": "require-corp"
      },
      "capabilities": [
        "main",
        "dmnote-dev"
      ]
    },
    "withGlobalTauri": true
  }
}
