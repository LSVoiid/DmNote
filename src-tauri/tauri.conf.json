{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DM NOTE",
  "version": "1.2.0",
  "identifier": "com.dmnote.app",
  "build": {
    "beforeBuildCommand": "npm run build:renderer",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000/main/index.html",
    "frontendDist": "../dist/renderer"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "DM Note - Settings",
        "width": 1060,
        "height": 760,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "transparent": false,
        "decorations": true,
        "url": "main/index.html"
      }
    ],
    "security": {
      "csp": null
    }
  }
}